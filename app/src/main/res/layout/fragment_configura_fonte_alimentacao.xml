<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ConfiguraFonteAlimentacaoFragment">

    <TextView
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fonte de Alimentação"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:background="@drawable/rectangle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewValorTensaoFontePositiva"
            android:layout_width="match_parent"
            android:layout_marginRight="45sp"
            android:layout_marginLeft="45sp"
            android:layout_height="100sp"
            android:background="@drawable/rectangle2"
            android:layout_marginBottom="415sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/viewValorTensaoFonteNegativa"
            android:layout_width="match_parent"
            android:layout_marginRight="45sp"
            android:layout_marginLeft="45sp"
            android:layout_height="100sp"
            android:background="@drawable/rectangle2"
            android:layout_marginTop="110sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textViewValorTensaoFontePositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/vinho"
            android:textSize="65sp"
            android:fontFamily="@font/digital"
            android:layout_marginBottom="415sp"
            android:layout_marginRight="115sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewValorTensaoFonteNegativo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/vinho"
            android:textSize="65sp"
            android:fontFamily="@font/digital"
            android:layout_marginRight="115sp"
            android:layout_marginTop="110sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
        android:id="@+id/btnDecrementoPositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/circlebutton"
        android:layout_marginBottom="155sp"
        android:layout_marginRight="175sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDecrementoNegativo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="375sp"
            android:layout_marginRight="175sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnIncrementoPositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebutton"
            android:fontFamily="@font/montserrat"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:layout_marginBottom="155sp"
            android:layout_marginLeft="175sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnIncrementoNegativo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebutton"
            android:fontFamily="@font/montserrat"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:layout_marginTop="375sp"
            android:layout_marginLeft="175sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@drawable/roundedbutton"
            android:fontFamily="@font/montserrat"
            android:text="Salvar"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnIncrementoNegativo"
            app:layout_constraintVertical_bias="0.491" />

        <TextView
        android:id="@+id/textViewUnidadePositiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="415sp"
        android:layout_marginLeft="190sp"
        android:fontFamily="@font/montserrat"
        android:text="Volts"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewValorTensaoFontePositiva"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewUnidadeNegativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190sp"
            android:fontFamily="@font/montserrat"
            android:text="Volts"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:layout_marginTop="110sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/viewValorTensaoFonteNegativa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>